
pipeline {
    agent any
    stages {
        stage('Clone Code') {
            steps { 
                git 'https://github.com/yourusername/devops-project.git' 
            }
        }
        stage('Build Docker Image') {
            steps { 
                sh 'docker build -t devops-project .' 
            }
        }
        stage('Run Docker Container') {
            steps { 
                sh 'docker run -d -p 8080:8080 devops-project' 
            }
        }
    }
}
